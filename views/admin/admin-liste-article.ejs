<%- include('partials-admin/header-admin.ejs')%>
<%- include('partials-admin/side-bar.ejs')%>

      <h1>liste des articles</h1>
         <!-- DataTales Example -->
         <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>titre</th>
                                <th>auteur</th>
                                <th>image</th>
                                <th>description</th>
                                <th>modifier</th>
                                <th>supprimer</th>
                            </tr>
                        </thead>
                        
                        <tbody>

                            <% articles.forEach(function(admin) {%>
           
                                <tr>
                                <td><%=admin.titre %></td>
                                <td><%=admin.auteurId %></td>
                                <td><img class ="img-thumbnail"src="<%=admin.image %>" alt=""></td>
                                <td><%=admin.description %></td>
                                <td><a href="" class ="btna"> modifier</a></td>
                                <td><a href="" class ="btna"> supprimer</a></td>
                            </tr>
                           
                                
                             <%});%>


                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

        </div>
    </div>
</div>


